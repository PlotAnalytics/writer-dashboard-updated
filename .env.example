# API Configuration
# For local development, use localhost
# For production on Vercel, leave empty or don't set this variable
VITE_API_BASE_URL=http://localhost:5001

VITE_APP_NAME=Writer Dashboard
VITE_APP_VERSION=1.0.0

# Authentication
VITE_JWT_SECRET=your-jwt-secret-here

# Features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_FEEDBACK=true

# External Services (for future use)
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# Production Note:
# On Vercel, either don't set VITE_API_BASE_URL or set it to empty string
# This will make the app use relative URLs like /api/auth/login
